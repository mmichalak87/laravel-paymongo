{
    "name": "mmichalak87/laravel-paymongo",
    "description": "A laravel wrapper for Paymongo API",
    "keywords": [
        "luigel",
        "laravel-paymongo"
    ],
    "homepage": "https://github.com/luigel/laravel-paymongo",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Rigel Kent Carbonel",
            "email": "rigel20.kent@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "guzzlehttp/guzzle": "^6.5|7.x",
        "laravel/framework": "10.x",
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Luigel\\LaravelPaymongo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luigel\\LaravelPaymongo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Luigel\\LaravelPaymongo\\LaravelPaymongoServiceProvider"
            ],
            "aliases": {
                "Paymongo": "Luigel\\LaravelPaymongo\\Facades\\PaymongoFacade"
            }
        }
    }
}
